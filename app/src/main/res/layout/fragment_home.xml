<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FFF"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="190dp"
            android:layout_marginBottom="100dp"
            android:text="KATEGORİLER"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:textStyle="bold" />
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridLayout"
            android:rowCount="2"
            android:columnCount="3"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="80dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/motivationCard"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/motivation"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Motivasyon"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/sportsCard"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/shoes"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spor ve Egzersiz"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/educationCard"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="8dp"

                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/education"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eğitim"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/foodCard"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_column="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:src="@drawable/avokado"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beslenme"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </GridLayout>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="380dp"
            android:layout_marginEnd="190dp"
            android:layout_marginBottom="100dp"
            android:text="SU İZLEYİCİSİ"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:textStyle="bold" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gridLayout2"
            android:rowCount="1"
            android:columnCount="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="80dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/waterReminderCard"
                android:layout_width="330dp"
                android:layout_height="220dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="290dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Sol tarafta - ikonu -->
                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:layout_weight="0.2"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/minusButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/eksi"/>
                    </LinearLayout>
                    <!-- Orta kısımda bardak görseli ve 3/8 yazısı -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/cupImageView"
                            android:layout_width="170dp"
                            android:layout_height="160dp"
                            android:src="@drawable/bardak" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/amountTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#223BDD"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/amountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/ 12 bardak"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_marginStart="8dp" /> <!-- İstediğiniz boşluğa göre ayarlayabilirsiniz -->

                        </LinearLayout>


                    </LinearLayout>

                    <!-- Sağ tarafta + ikonu -->
                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:layout_weight="0.2"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/plusButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/plus"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </GridLayout>



        <TextView
            android:id="@+id/textView8"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="650dp"
            android:layout_marginEnd="190dp"
            android:layout_marginBottom="100dp"
            android:text="SPOR İZLEYİCİSİ"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/kalenderCard"
                android:layout_width="330dp"
                android:layout_height="320dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="690dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <org.naishadhparmar.zcustomcalendar.CustomCalendar
                    android:id="@+id/custom_calendar"
                    android:layout_width="320dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="320dp" />

            </androidx.cardview.widget.CardView>
        </GridLayout>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1020dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="100dp"
            android:text="KALORİ İZLEYİCİSİ"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/gridLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="780dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="80dp"
            android:columnCount="2"
            android:rowCount="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/kaloriIzleyicisiCard"
                android:layout_width="330dp"
                android:layout_height="340dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="280dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="330dp"
                    android:layout_height="340dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barchart"
                        android:layout_width="320dp"
                        android:layout_height="330dp"
                        android:layout_marginLeft="10dp"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>


    </RelativeLayout>


</ScrollView>
