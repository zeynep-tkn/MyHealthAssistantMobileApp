                    android:layout_toEndOf="@id/imageView"
                    android:layout_toStartOf="@+id/imageButton1"
                    android:layout_centerVertical="true"
                    android:text="Elma"
                    android:textSize="18sp"/>

                <ImageButton
                    android:id="@+id/imageButton1"
