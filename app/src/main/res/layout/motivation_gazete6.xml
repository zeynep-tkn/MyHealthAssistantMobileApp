<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView99"
        android:layout_width="274dp"
        android:layout_height="38dp"
        android:text="OKUYUCU YORUMLARI"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="560dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gazetenizdeki son makale gerçekten ilham vericiydi. Yazarın derin analizi ve samimi yaklaşımı beni etkiledi. Teşekkür ederim!"
                android:textSize="18sp"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mehmet Yılmaz, Mimar, 35"
                android:textSize="18sp"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Haberleriniz her zaman güvenilir ve tarafsız. Sizin gibi kaliteli bir yayın organını takip etmek benim için bir zevk"
                android:textSize="18sp"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayşe Demir, Öğretmen, 42"
                android:textSize="18sp"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gazetenizdeki köşe yazıları gençlerin bakış açısını yansıtıyor. Daha fazla genç yazarı desteklemek harika olurdu!"
                android:textSize="18sp"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Can Aksoy, Öğrenci, 21"
                android:textSize="18sp"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Son haberdeki detaylı araştırma ve fotoğraflar gerçekten etkileyiciydi. Gazetenizdeki kaliteyi her zaman takdir ediyorum."
                android:textSize="18sp"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fatma Kaya, Ev Hanımı, 38"
                android:textSize="18sp"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yorum köşeniz gerçekten ilginç ve çeşitli konuları ele alıyor. Okuyucuların farklı görüşlerini görmek çok değerli."
                android:textSize="18sp"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ali Yıldırım, İş Adamı, 50"
                android:textSize="18sp"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gazetenizin çeşitli konuları kapsayan içeriği ve kaliteli haberleri beni her zaman memnun ediyor. Devamını bekliyorum!"
                android:textSize="18sp"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zeynep Tekin, Gazeteci, 29"
                android:textSize="18sp"
                android:padding="8dp"/>

            <!-- Metin eklemeye devam edebilirsiniz -->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>