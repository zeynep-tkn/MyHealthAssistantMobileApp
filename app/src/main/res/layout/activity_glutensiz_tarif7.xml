<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".GlutensizTarif7"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FFF"
        android:layout_height="wrap_content">

        <!-- İlk ImageView -->

        <!-- Beğenme/Favori Butonu -->

        <ImageView
            android:id="@+id/fotografImageView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/karniyarik"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/begenmeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/heart"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-22dp"
            android:layout_below="@id/fotografImageView"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="4dp"/>

        <!-- Başlık -->
        <TextView
            android:id="@+id/baslikTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KARNIYARIK"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/fotografImageView"
            android:layout_marginTop="22dp"/>

        <!-- Malzemeler Başlığı -->
        <TextView
            android:id="@+id/textViewAI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MALZEMELER"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_below="@id/baslikTextView"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="512dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- ilk cardView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/SaglikliLayout"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    android:layout_margin="8dp">

                    <!-- İçerik -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Üst orta kısım -->
                        <TextView
                            android:id="@+id/TitleSaglik"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kıyma "
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="80dp"/>

                        <!-- Orta İmageView -->
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/kiyma"/>





                    </FrameLayout>

                </androidx.cardview.widget.CardView>



                <!-- ikinci cardView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/veganLayout"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    android:layout_margin="8dp">

                    <!-- İçerik -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Üst orta kısım -->
                        <TextView
                            android:id="@+id/TitleVegan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patlıcan"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="80dp"/>

                        <!-- Orta İmageView -->
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/eggplant"/>





                    </FrameLayout>

                </androidx.cardview.widget.CardView>


                <!-- Üçüncü cardView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/glutensizLayout"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    android:layout_margin="8dp">

                    <!-- İçerik -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Üst orta kısım -->
                        <TextView
                            android:id="@+id/TitleGluten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soğan"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="80dp"/>

                        <!-- Orta İmageView -->
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/onion"/>





                    </FrameLayout>

                </androidx.cardview.widget.CardView>


                <!-- Dördüncü cardView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/vegatarianCard"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    android:layout_margin="8dp">

                    <!-- İçerik -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Üst orta kısım -->
                        <TextView
                            android:id="@+id/Titlelimon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Domates"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="80dp"/>

                        <!-- Orta İmageView -->
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/tomato"/>





                    </FrameLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/limon"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    android:layout_margin="8dp">

                    <!-- İçerik -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Üst orta kısım -->
                        <TextView
                            android:id="@+id/TitleVejetaryen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sarımsak"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="80dp"/>

                        <!-- Orta İmageView -->
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/garlic"/>





                    </FrameLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/textYapilis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YAPILIŞI:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_below="@id/baslikTextView"
            android:layout_marginTop="190dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>


        <TextView
            android:id="@+id/yapilisiTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="695dp"
            android:text="@string/yapilisi_karniyarik"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".GlutensizTarif7">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
</ScrollView>